<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopilyze - Продукт</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #333;
            color: white;
            padding: 1rem;
            text-align: center;
        }

        header nav ul {
            list-style-type: none;
            padding: 0;
        }

        header nav ul li {
            display: inline;
            margin: 0 1rem;
        }

        header nav ul li a {
            color: white;
            text-decoration: none;
        }

        main {
            padding: 2rem;
            text-align: center;
            flex: 1;
        }

        .product-detail {
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 1rem;
            padding: 1rem;
            width: 80%;
            max-width: 800px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: left;
            margin: auto;
        }

        .product-detail img {
            max-width: 100%;
            height: auto;
            border-bottom: 1px solid #ddd;
            margin-bottom: 1rem;
        }

        .product-detail h3 {
            font-size: 1.5rem;
            margin: 0.5rem 0;
        }

        .product-detail p {
            margin: 0.5rem 0;
        }

        .comments {
            margin-top: 2rem;
        }

        .comment {
            border-top: 1px solid #ddd;
            padding-top: 1rem;
            margin-top: 1rem;
        }

        .comment p {
            margin: 0.5rem 0;
        }

        footer {
            background-color: #333;
            color: white;
            padding: 1rem;
            text-align: center;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 500px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
<header>
    <h1>Shopilyze</h1>
    <nav>
        <ul>
            <li><a href="index.html">Главная</a></li>
            <li><a href="index.html#products">Продукты</a></li>
            <li><a href="index.html#contact">Контакты</a></li>
        </ul>
    </nav>
</header>

<main id="product-detail">
    <div class="product-detail">
        <img id="product-image" src="" alt="">
        <h3 id="product-title"></h3>
        <p id="product-description"></p>
        <p id="product-code"></p>
        <p id="product-grade"></p>
        <p id="product-price"></p>
        <p id="product-seller"></p>
        <div class="comments" id="product-comments">
            <h4>Комментарии</h4>
            <div id="comments-list"></div>
            <button id="add-comment">Добавить комментарий</button>
        </div>
    </div>
</main>

<footer>
    <p>&copy; 2024 Shopilyze. Все права защищены.</p>
</footer>

<!-- Модальное окно для добавления комментария -->
<div id="commentModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Добавить комментарий</h2>
        <form id="commentForm">
            <label for="Content">Комментарий:</label>
            <textarea id="Content" name="Content" required></textarea><br>
            <label for="Pluses">Плюсы:</label>
            <input type="text" id="Pluses" name="Pluses" required><br>
            <label for="Minuses">Минусы:</label>
            <input type="text" id="Minuses" name="Minuses" required><br>
            <input type="hidden" id="ProductId" name="ProductId">
            <button type="submit">Отправить</button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const productId = urlParams.get('id');

        if (productId) {
            fetch(`https://marketplace-800v.onrender.com/api/product/${productId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok ' + response.statusText);
                    }
                    return response.json();
                })
                .then(product => {
                    const productImage = document.getElementById('product-image');
                    const productTitle = document.getElementById('product-title');
                    const productDescription = document.getElementById('product-description');
                    const productPrice = document.getElementById('product-price');
                    const productSeller = document.getElementById('product-seller');
                    const productCode = document.getElementById('product-code');
                    const productGrade = document.getElementById('product-grade');
                    const commentsList = document.getElementById('comments-list');

                    if (productImage && productTitle && productDescription && productPrice && productSeller && productCode && productGrade && commentsList) {
                        productImage.src = product.pictureUrl;
                        productImage.alt = product.title.ru;
                        productTitle.innerText = product.title.ru;
                        productDescription.innerText = product.description.ru;
                        productSeller.innerText = `Продавец: ${product.seller}`;
                        productCode.innerText = `Код товара: ${product.productCode}`;
                        productGrade.innerText = `Оценка: ${product.grade}`;
                        productPrice.innerText = `Цена: $${product.price}`;

                        product.comments.forEach(comment => {
                            const commentElement = document.createElement('div');
                            commentElement.classList.add('comment');

                            commentElement.innerHTML = `
                            <p><strong>Автор:</strong> ${comment.author}</p>
                            <p><strong>Дата:</strong> ${new Date(comment.createdAt).toLocaleDateString()}</p>
                            <p><strong>Оценка:</strong> ${comment.grade}</p>
                            <p><strong>Плюсы:</strong> ${comment.pluses}</p>
                            <p><strong>Минусы:</strong> ${comment.minuses}</p>
                            <p><strong>Комментарий:</strong> ${comment.content}</p>
                        `;

                            commentsList.appendChild(commentElement);
                        });
                    } else {
                        console.error('Не удалось найти один из элементов на странице.');
                    }
                })
                .catch(error => {
                    console.error('Ошибка при загрузке данных о продукте:', error);
                    document.getElementById('product-detail').innerHTML = '<p>Не удалось загрузить данные о продукте.</p>';
                });
        } else {
            document.getElementById('product-detail').innerHTML = '<p>Не указан продукт.</p>';
        }

        // Модальное окно
        const modal = document.getElementById('commentModal');
        const btn = document.getElementById('add-comment');
        const span = document.getElementsByClassName('close')[0];
        const form = document.getElementById('commentForm');

        btn.onclick = function() {
            document.getElementById('ProductId').value = productId;
            modal.style.display = 'block';
        }

        span.onclick = function() {
            modal.style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        form.addEventListener('submit', function(event) {
            event.preventDefault();

            const formData = new FormData(form);

            // Получить refreshToken из куки
            const refreshToken = getCookie('refreshToken');
            if (!refreshToken) {
                console.warn('Refresh Token не найден в cookies');
                return;
            }

            fetch('https://marketplace-800v.onrender.com/api/product/add', {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${refreshToken}`
                },
                body: formData
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok ' + response.statusText);
                    }
                    return response.json();
                })
                .then(result => {
                    console.log('Комментарий успешно добавлен:', result);
                    modal.style.display = 'none';
                    // Обновите комментарии или перезагрузите страницу для отображения нового комментария
                })
                .catch(error => {
                    console.error('Ошибка при добавлении комментария:', error);
                });
        });

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }
    });
</script>
</body>
</html>