<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopilyze - Продукт</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #333;
            color: white;
            padding: 1rem;
            text-align: center;
        }

        header nav ul {
            list-style-type: none;
            padding: 0;
        }

        header nav ul li {
            display: inline;
            margin: 0 1rem;
        }

        header nav ul li a {
            color: white;
            text-decoration: none;
        }

        main {
            padding: 2rem;
            text-align: center;
            flex: 1;
        }

        .product-detail {
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin: 1rem;
            padding: 1rem;
            width: 80%;
            max-width: 800px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: left;
            margin: auto;
        }

        .product-detail img {
            max-width: 100%;
            height: auto;
            border-bottom: 1px solid #ddd;
            margin-bottom: 1rem;
        }

        .product-detail h3 {
            font-size: 1.5rem;
            margin: 0.5rem 0;
        }

        .product-detail p {
            margin: 0.5rem 0;
        }

        .comments {
            margin-top: 2rem;
        }

        .comment {
            border-top: 1px solid #ddd;
            padding-top: 1rem;
            margin-top: 1rem;
        }

        .comment p {
            margin: 0.5rem 0;
        }

        footer {
            background-color: #333;
            color: white;
            padding: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
<header>
    <h1>Shopilyze</h1>
    <nav>
        <ul>
            <li><a href="index.html">Главная</a></li>
            <li><a href="index.html#products">Продукты</a></li>
            <li><a href="index.html#contact">Контакты</a></li>
        </ul>
    </nav>
</header>

<main id="product-detail">
    <div class="product-detail">
        <img id="product-image" src="" alt="">
        <h3 id="product-title"></h3>
        <p id="product-description"></p>
        <p id="product-price"></p>
        <div class="comments" id="product-comments">
            <h4>Комментарии</h4>
            <div id="comments-list"></div>
            <button id="add-comment">Добавить комментарий</button>
        </div>
    </div>
</main>

<footer>
    <p>&copy; 2024 Shopilyze. Все права защищены.</p>
</footer>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const productId = urlParams.get('id');

        if (productId) {
            fetch(`https://marketplace-800v.onrender.com/api/product/${productId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok ' + response.statusText);
                    }
                    return response.json();
                })
                .then(product => {
                    document.getElementById('product-image').src = product.pictureUrl;
                    document.getElementById('product-image').alt = product.title.ru;
                    document.getElementById('product-title').innerText = product.title.ru;
                    document.getElementById('product-description').innerText = product.description.ru;
                    document.getElementById('product-price').innerText = `Цена: $${product.price}`;

                    const commentsList = document.getElementById('comments-list');
                    product.comments.forEach(comment => {
                        const commentElement = document.createElement('div');
                        commentElement.classList.add('comment');

                        commentElement.innerHTML = `
                                <p><strong>Автор:</strong> ${comment.author}</p>
                                <p><strong>Дата:</strong> ${new Date(comment.createdAt).toLocaleDateString()}</p>
                                <p><strong>Оценка:</strong> ${comment.grade}</p>
                                <p><strong>Плюсы:</strong> ${comment.pluses}</p>
                                <p><strong>Минусы:</strong> ${comment.minuses}</p>
                                <p><strong>Комментарий:</strong> ${comment.content}</p>
                            `;

                        commentsList.appendChild(commentElement);
                    });
                })
                .catch(error => {
                    console.error('Ошибка при загрузке данных о продукте:', error);
                    document.getElementById('product-detail').innerHTML = '<p>Не удалось загрузить данные о продукте.</p>';
                });
        } else {
            document.getElementById('product-detail').innerHTML = '<p>Не указан продукт.</p>';
        }
    });
</script>
</body>
</html>